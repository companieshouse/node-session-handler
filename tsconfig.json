{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": false,
        "sourceMap": true,
        "typeRoots": [
            "index.ts",
            "src/global.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "./src", "index.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
